@import 'colors'

.input-project
  outline: 0
  border: 0
  border-bottom: 1px solid tm-grey
  width: 66%
  font-size: 1rem
  flex: 1
  margin-right: 1rem

.inline
  outline: 0
  border: 0
  border-bottom: 1px solid tm-grey
  width: 2rem
  text-align: center

.btn
  outline: 0
  border: 0
  background: none
  border-radius: 3px
  font-size: 1rem
  padding: 0.2rem 0.7rem
  background-color: tm-smoke
  cursor: pointer

  & + .btn
    margin-left: 0.5rem

  &:active
    background-color: tm-dark-smoke

  &.primary
    background-color: tm-blue
    color: white

    &:active
      background-color: tm-dark-blue

  &.image
    width: 1.4rem
    height: 1.4rem
    background-repeat: no-repeat
    background-position: center
    background-size: 1rem 1rem

    &.save
      background-image: url('images/save.svg')

    &.cancel
      background-image: url('images/cancel.svg')
