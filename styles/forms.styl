@import 'colors'

input
  background: transparent

.input-project
  outline: 0
  border: 0
  border-bottom: 1px solid tm-grey
  width: 66%
  font-size: 1rem
  flex: 1
  margin-right: 1rem

.inline
  outline: 0
  border: 0
  border-bottom: 1px solid tm-grey
  width: 2rem
  text-align: center

.btn
  outline: 0
  border: 0
  background: none
  border-radius: 3px
  font-size: 1rem
  padding: 0.2rem 0.7rem
  background-color: tm-smoke
  cursor: pointer

  & + .btn
    margin-left: 0.5rem

  &:active
    background-color: tm-dark-smoke

  &.image
    width: 1.4rem
    height: 1.4rem
    background-color: transparent
    background-repeat: no-repeat
    background-position: center
    background-size: cover

    &.save
      background-image: inline('../images/save.svg')

    &.cancel
      background-image: inline('../images/cancel.svg')

    &.play
      background-image: inline('../images/play.svg')

    &.pause
      background-image: inline('../images/pause.svg')

    &.add
      background-image: inline('../images/add.svg')
